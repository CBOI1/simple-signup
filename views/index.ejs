<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        nav {
            display: flex;
            flex-direction: column;
        }
        .message {
            border: 1px solid black;
            width: 20rem;
            padding: 1rem;
            border-radius: 1rem;
            background-color: white;
           
        }
        body {
            display: flex;
            flex-direction: column;
            align-items: center;
             background-color: beige;
        }

    </style>
</head>
<body>
    <header>
        <nav>
            <% if (!locals.isAuthenticated || !isAuthenticated()) { %>
                <li><a href="/login">login</a></li>
                <li><a href="/register">register</a></li>
            <% } else { %>
                <li><a href="/create">create message</a></li>
                <li>
                    <form action="/logout" method="POST">
                        <button type="submit" id="logout-btn">logout</button>
                    </form>
                </li>
                <% if (locals.isMember && !locals.isMember()) { %>
                    <li>
                        <a href="/become-member">become a member</a>
                    </form>
                    </li>
                <% } %>
            <% } %>
        </nav>
    </header>
    <div id="messages">
        <% for (const post of posts) { %>
            <div class="message">
                <% if (locals.isMember && isMember()) { %>
                    <div class="details">
                        <span><%= post.fullname %></span>
                        <span><%= post.date %></span>
                    </div>
                <% } %>
                <h3><%= post.title %></h3>
                <p class="text">
                    <%= post.text %>
                </p>
            </div>
        <% } %>
    </div>
</body>
</html>